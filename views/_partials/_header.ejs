<!-- views/partials/header.ejs -->

<!-- HEADER -->
<header class="header">
  <div class="container">
    <div class="container-left">
      <!-- 로고 -->
      <figure class="logo">
        <a href="/" style="display: flex;">
          👔
          
          <h1 class="site-title">류정한
          </h1>
        </a>
      </figure>

      <!-- 메뉴 -->
      <%- include('_navigation.ejs') %>

      <% if (loggedIn) { %>
        <a class="btn btn-outline-secondary"
        href="<%= `/users/${currentUser._id}` %>">
          <%= currentUser.username %>
        </a>
        <a class="btn ut-red" href="/users/logout">Logout</a>
      <% } else { %>
        <a class="btn btn-outline-secondary" href ="/users/login">Login</a>
        <a class="btn ut-red" href="/users/new">회원가입</a>
      <% } %> 
    </div>
  </div>
</header>
